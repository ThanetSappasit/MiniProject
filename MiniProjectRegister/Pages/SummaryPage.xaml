<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiniProjectRegister.Pages.SummaryPage"
             xmlns:viewmodel="clr-namespace:MiniProjectRegister.ViewModels"
             xmlns:model="clr-namespace:MauiApp1.Model"
             Shell.NavBarIsVisible="False"
             Padding="20"
             BackgroundColor="#F0F4F8"
             Title="SummaryPage">
    <Grid RowDefinitions="Auto,*">
        <Grid Grid.Row="0" 
              ColumnDefinitions="Auto,*"
              Margin="0,20,0,10">
            <Button Grid.Column="0"
                    Text="back"
                    FontFamily="MaterialIconsRegular"
                    BackgroundColor="Transparent"
                    TextColor="#2C5282"
                    FontSize="24"
                    Command="{Binding GoBackCommand}"
                    HorizontalOptions="Start"
                    HeightRequest="50"
                    VerticalOptions="Center"/>
            
            <Label Grid.Column="1"
                   Text="ผลการลงทะเบียน"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#2C5282"
                   VerticalOptions="Center"/>
        </Grid>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="15">
                <Border StrokeShape="RoundRectangle 15"
                        BackgroundColor="White"
                        Stroke="#3182CE"
                        StrokeThickness="1"
                        Padding="20">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="{Binding CurrentEmail.Name, StringFormat='คุณ {0}'}"
                               FontSize="18"
                               HorizontalOptions="Center"
                               TextColor="#2C5282"
                               FontAttributes="Bold"/>
                        <Label Text="{Binding CurrentEmail.UserId, StringFormat='รหัสนิสิต {0}'}"
                               FontSize="16"
                               HorizontalOptions="Center"
                               TextColor="#4A5568"/>
                    </VerticalStackLayout>
                </Border>

                <CollectionView ItemsSource="{Binding TermCoursesList}"
                                EmptyView="No courses available for this user.">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border Stroke="#3182CE"
                                    StrokeThickness="2"
                                    StrokeShape="RoundRectangle 15"
                                    BackgroundColor="White"
                                    Padding="20"
                                    Margin="0,0,0,15">
                                <StackLayout Spacing="15">
                                    <Label Text="{Binding TermName, StringFormat='เทอม {0}'}"
                                           FontSize="20"
                                           FontAttributes="Bold"
                                           TextColor="#2C5282"/>
                                    <CollectionView ItemsSource="{Binding Courses}"
                                                    EmptyView="No courses in this term.">
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate>
                                                <Grid RowSpacing="10"
                                                      Padding="0,15,0,0"
                                                      ColumnSpacing="15">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Label Grid.Column="0"
                                                           Text="{Binding Courseid}"
                                                           FontSize="16"
                                                           TextColor="#2C5282"
                                                           VerticalOptions="Center"/>
                                                    <Label Grid.Column="1"
                                                           Text="{Binding Coursename}"
                                                           FontSize="16"
                                                           TextColor="#2C5282"
                                                           VerticalOptions="Center"/>
                                                    <Label Grid.Column="2"
                                                           Text="{Binding Instructor}"
                                                           FontSize="16"
                                                           TextColor="#4A5568"
                                                           VerticalOptions="Center"/>
                                                    <Label Grid.Column="3"
                                                           Text="{Binding Credits, StringFormat='{0} Credits'}"
                                                           FontSize="16"
                                                           TextColor="#4A5568"
                                                           VerticalOptions="Center"/>
                                                </Grid>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>
                                </StackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>