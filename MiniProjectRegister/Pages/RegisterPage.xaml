<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiniProjectRegister.Pages.RegisterPage"
             xmlns:viewmodel="clr-namespace:MiniProjectRegister.ViewModels"
             x:DataType="viewmodel:RegisterPageViewModel"
             Shell.NavBarIsVisible="False"
             Padding="20"
             BackgroundColor="#FFDEE14C"
             Title="RegisterPage">

    <ScrollView>
        <Grid RowDefinitions="Auto, *"
              ColumnDefinitions="*, *"
              RowSpacing="20"
              ColumnSpacing="20">

            <!-- Header spanning both columns -->
            <Label Text="Register for Courses"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#2C3E50"
                   Grid.Row="0"
                   Grid.ColumnSpan="2"/>

            <!-- Left Column: Subject Selection -->
            <StackLayout Grid.Row="1"
                         Grid.Column="0"
                         Spacing="20">

                <!-- Year Picker -->
                <Border Stroke="#3498DB"
                        StrokeThickness="1"
                        Padding="10"
                        BackgroundColor="#FF414141">
                    <StackLayout>
                        <Label Text="Academic Year"
                               FontSize="16"
                               TextColor="#34495E"/>
                        <Picker Title="Select Year"
                                FontSize="16"
                                TextColor="#2C3E50"
                                ItemsSource="{Binding Years}"
                                SelectedItem="{Binding SelectedYear}"/>
                    </StackLayout>
                </Border>

                <!-- Semester Picker -->
                <Border Stroke="#3498DB"
                        StrokeThickness="1"
                        Padding="10"
                        BackgroundColor="#FF414141">
                    <StackLayout>
                        <Label Text="Semester"
                               FontSize="16"
                               TextColor="#34495E"/>
                        <Picker Title="Select Semester"
                                FontSize="16"
                                TextColor="#2C3E50"
                                ItemsSource="{Binding Semesters}"
                                SelectedItem="{Binding SelectedSemester}"/>
                    </StackLayout>
                </Border>

                <!-- Course Picker -->
                <Border Stroke="#3498DB"
                        StrokeThickness="1"
                        Padding="10"
                        BackgroundColor="#FF414141">
                    <StackLayout>
                        <Label Text="Select Course"
                               FontSize="16"
                               TextColor="#34495E"/>
                        <Picker Title="Select a Course"
                                FontSize="16"
                                TextColor="#2C3E50"
                                ItemsSource="{Binding AvailableCourses}"
                                SelectedItem="{Binding SelectedCourse}"/>
                    </StackLayout>
                </Border>

                <!-- Add Course Button -->
                <Button Text="Add Course"
                        FontSize="16"
                        BackgroundColor="#3498DB"
                        TextColor="White"
                        CornerRadius="10"
                        Padding="10"
                        HorizontalOptions="FillAndExpand"
                        Command="{Binding AddCourseCommand}"/>

            </StackLayout>

            <!-- Right Column: Selected Subjects -->
            <StackLayout Grid.Row="1"
                         Grid.Column="1"
                         Spacing="20">

                <!-- Selected Courses List -->
                <Border Stroke="#3498DB"
                        StrokeThickness="1"
                        Padding="10"
                        BackgroundColor="White"
                        HeightRequest="300">
                    <StackLayout>
                        <Label Text="Selected Courses"
                               FontSize="16"
                               TextColor="#34495E"/>
                        <ScrollView>
                            <CollectionView ItemsSource="{Binding SelectedCourses}"
                                            EmptyView="No courses selected yet">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <StackLayout Orientation="Horizontal"
                                                     Padding="5">
                                            <Label Text="{Binding .}"
                                                   FontSize="14"
                                                   TextColor="#2C3E50"
                                                   VerticalOptions="Center"
                                                   HorizontalOptions="StartAndExpand"/>
                                            <Button Text="Remove"
                                                    FontSize="12"
                                                    BackgroundColor="#E74C3C"
                                                    TextColor="White"
                                                    CornerRadius="5"
                                                    HorizontalOptions="End"
                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:RegisterPageViewModel}}, Path=RemoveCourseCommand}"
                                                    CommandParameter="{Binding .}"/>
                                        </StackLayout>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </ScrollView>
                    </StackLayout>
                </Border>

                <!-- Submit Button -->
                <Button Text="Submit Registration"
                        FontSize="16"
                        BackgroundColor="#27AE60"
                        TextColor="White"
                        CornerRadius="10"
                        Padding="10"
                        HorizontalOptions="FillAndExpand"/>
            </StackLayout>
        </Grid>
    </ScrollView>
</ContentPage>