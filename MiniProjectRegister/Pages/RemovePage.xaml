<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiniProjectRegister.Pages.RemovePage"
             xmlns:viewmodel="clr-namespace:MiniProjectRegister.ViewModels"
             xmlns:model="clr-namespace:MauiApp1.Model"
             Shell.NavBarIsVisible="False"
             Padding="20"
             BackgroundColor="#FFDEE14C"
             Title="Remove Courses">
    <ScrollView>
        <Grid RowDefinitions="Auto,Auto,*">
            <!-- Header -->
            <Label Grid.Row="0"
                   Text="ถอนรายวิชา"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="Black"
                   Margin="0,10"/>

            <!-- User Information -->
            <VerticalStackLayout Grid.Row="1"
                                 Spacing="5">
                <Label Text="{Binding CurrentEmail.Name, StringFormat='คุณ {0}'}"
                       FontSize="18"
                       HorizontalOptions="Center"
                       TextColor="Black"/>
            </VerticalStackLayout>

            <!-- Grouped CollectionView -->
            <StackLayout Grid.Row="2"
                         Padding="10">
                <!-- Display the user's full name
                <Label Text="{Binding CurrentEmail.Name, StringFormat='Courses for {0}'}"
                       FontSize="Large"
                       HorizontalOptions="Center"/> -->

                <!-- CollectionView for terms -->
                <CollectionView ItemsSource="{Binding TermCoursesList}"
                                EmptyView="No courses available for this user.">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border Stroke="Gray"
                                    StrokeThickness="1"
                                    Padding="10"
                                    Margin="5">
                                <StackLayout>
                                    <!-- Term Name -->
                                    <Label Text="{Binding TermName, StringFormat='เทอม {0}'}"
                                           FontSize="Medium"
                                           FontAttributes="Bold"/>

                                    <!-- Grid for course table -->
                                    <Grid RowSpacing="5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <!-- Courseid -->
                                            <ColumnDefinition Width="*"/>
                                            <!-- Coursename -->
                                            <ColumnDefinition Width="Auto"/>
                                            <!-- Instructor -->
                                            <ColumnDefinition Width="Auto"/>
                                            <!-- Credits -->
                                        </Grid.ColumnDefinitions>

                                        <!-- Bind courses to the Grid -->
                                        <CollectionView Grid.Row="1"
                                                        ItemsSource="{Binding Courses}"
                                                        EmptyView="No courses in this term.">
                                            <CollectionView.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid RowSpacing="5">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Label Grid.Column="0"
                                                               Text="{Binding Courseid}"
                                                               FontSize="Small"
                                                               Padding="5,0"/>
                                                        <Label Grid.Column="1"
                                                               Text="{Binding Coursename}"
                                                               FontSize="Small"
                                                               Padding="5,0"/>
                                                        <Label Grid.Column="2"
                                                               Text="{Binding Instructor}"
                                                               FontSize="Small"
                                                               Padding="5,0"/>
                                                        <Label Grid.Column="3"
                                                               Text="{Binding Credits, StringFormat='{0} Credits'}"
                                                               FontSize="Small"
                                                               Padding="5,0"/>
                                                        <Button Grid.Column="4"
                                                                Text="ถอนรายวิชา"
                                                                Command="{Binding RemoveCommand}"/>
                                                    </Grid>
                                                </DataTemplate>
                                            </CollectionView.ItemTemplate>
                                        </CollectionView>
                                    </Grid>
                                </StackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>
        </Grid>
    </ScrollView>
</ContentPage>